<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginBottom="0dp"
        android:layout_marginRight="0dp"
        android:background="@color/editTextcolor"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <LinearLayout
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_30sdp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="40dp"
            android:background="@color/linear_color"
            android:orientation="vertical">

            <Button
                android:id="@+id/btnBack_workplan"
                android:layout_width="@dimen/_13sdp"
                android:layout_height="@dimen/_13sdp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_marginBottom="@dimen/_5sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/back_btn"  />

        </LinearLayout>

        <ImageView
            android:id="@+id/logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_gravity="left"
            android:layout_marginTop="@dimen/_3sdp"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/_5sdp"
            android:paddingBottom="@dimen/_34sdp"
            android:scaleType="fitStart"
            android:src="@drawable/skool_360"/>



        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_25sdp"
            android:text="WORK PLAN"
            android:textColor="@android:color/white"
            android:textSize="@dimen/_12sdp"
            android:layout_marginTop="@dimen/_6sdp"
            android:textStyle="normal"
            android:layout_alignTop="@+id/header"
            android:layout_centerHorizontal="true"  />

        <TextView
            android:id="@+id/txtNoRecordsworkplan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/date_rel"
            android:layout_marginTop="@dimen/_20sdp"
            android:gravity="center"
            android:text="No Records Found..."
            android:textColor="@android:color/holo_red_dark"
            android:textStyle="bold"
            android:textSize="@dimen/_11sdp"
            android:visibility="gone" />

        <RelativeLayout
            android:id="@+id/date_rel"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_35sdp"
            android:layout_below="@+id/header"
            android:layout_marginTop="@dimen/_10sdp"
            android:gravity="center">
            <Spinner
                android:id="@+id/spinfromdate"
                android:layout_width="@dimen/_65sdp"
                android:layout_height="@dimen/_25sdp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/dropdown_button"
                android:dropDownVerticalOffset="25dp"
                android:forceHasOverlappingRendering="false" />

            <Spinner
                android:id="@+id/spintodate"
                android:layout_width="@dimen/_65sdp"
                android:layout_height="@dimen/_25sdp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_toRightOf="@+id/spinfromdate"
                android:background="@drawable/dropdown_button"
                android:dropDownVerticalOffset="25dp"
                android:forceHasOverlappingRendering="false"/>
            <Button
                android:id="@+id/btnFilterWorkPlan"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_30sdp"
                android:layout_alignBottom="@+id/spintodate"
                android:layout_alignTop="@+id/spintodate"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_toRightOf="@+id/spintodate"
                android:background="@drawable/profile_button"
                android:padding="@dimen/_3sdp"
                android:text="Filter"
                android:textColor="@android:color/white"
                android:textSize="@dimen/_11sdp"
                android:textStyle="bold"  />

        </RelativeLayout>
        <LinearLayout
            android:id="@+id/workplan_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/date_rel"
            android:layout_margin="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_15sdp"
            android:orientation="horizontal"
            android:visibility="gone">

            <include layout="@layout/workplan_header" />
        </LinearLayout>
        <ExpandableListView
            android:id="@+id/lvExpworkplan"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/workplan_header"
            android:layout_margin="@dimen/_5sdp"
            android:childDivider="@android:color/transparent"
            android:divider="@android:color/white"
            android:dividerHeight="@dimen/_5sdp"
            android:groupIndicator="@null"
            android:scrollbars="none"/>

    </RelativeLayout>
</LinearLayout>